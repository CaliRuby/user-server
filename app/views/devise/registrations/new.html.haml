- content_for :title, 'Registration Page'
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f|
  %h2 Sign up
  = f.error_notification
  .form-inputs
    = f.input :email, required: true, autofocus: true, placeholder: 'Your email', label: false
    = f.input :password, required: true, placeholder: 'Your password', label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    = f.input :password_confirmation, required: true, placeholder: 'Retype your password', label: false
  .form-actions
    = f.button :submit, "Sign up", class: 'btn btn-lg btn-primary btn-block'
  %br
  = render "devise/shared/links"
