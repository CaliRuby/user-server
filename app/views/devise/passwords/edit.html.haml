= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-signin' }) do |f|
  %h2 Change your password
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-inputs
    = f.input :password, label: false, required: true, placeholder: 'Your password', autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)
    = f.input :password_confirmation, label: false, required: true, placeholder: 'Retype your password'
  .form-actions
    = f.button :submit, "Change my password", class: 'btn btn-lg btn-primary btn-block'
= render "devise/shared/links"
