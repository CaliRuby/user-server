.documents.new-page
  .container-fluid
    %h1 PDF rendering
    .card
      .card-body
        %h3.uppercased-font= t('.write_your_content')
        = simple_form_for @document, as: :document, url: documents_path(format: :pdf), html: { target: '_blank' } do |f|
          .form-inputs
            %br
            = f.error_notification
            .row
              .col-12
                = f.input :body, as: :text, label: 'Document Body'
          .form-actions
            = f.button :submit, 'Render', data: { disable_with: false }
